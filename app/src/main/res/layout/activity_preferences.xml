<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alicjasuszwedyk.shopping.PreferencesActivity">

    <TextView
        android:id="@+id/optionsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:text="Options"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/colorSettingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="Font color"
        android:textAlignment="center"
        android:textSize="14sp"
        android:layout_below="@+id/optionsHeader"
        android:layout_toStartOf="@+id/colorRadioGroup" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/colorRadioGroup"
        android:layout_alignTop="@+id/colorSettingText"
        android:layout_alignStart="@+id/optionsHeader"
        android:layout_marginStart="57dp">

        <RadioButton
            android:id="@+id/radioButton11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Color 1"
            android:textColor="#000000"
            app:buttonTint="#000000" />

        <RadioButton
            android:id="@+id/radioButton12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Color 2"
            android:textColor="#ff4081"
            app:buttonTint="#ff4081" />

        <RadioButton
            android:id="@+id/radioButton13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Color 3"
            android:textColor="#5f68ce"
            app:buttonTint="#5f68ce" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/colorSettingText"
        android:layout_below="@+id/colorRadioGroup"
        android:layout_marginTop="55dp"
        android:text="Font size:" />


    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/colorRadioGroup"
        android:layout_alignTop="@+id/textView5" />

</RelativeLayout>
